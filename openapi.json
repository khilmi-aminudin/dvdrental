{
    "openapi": "3.0.2",
    "info": {
        "title": "dvdrental api",
        "description": "apispec for dvdrental project",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080/api/",
            "description": "local server development"
        }
    ],
    "components": {
        "schemas": {
            "actor": {
                "type": "object",
                "properties": {
                    "actor_id": {
                        "type": "number",
                        "example": "1"
                    },
                    "first_name": {
                        "type": "string",
                        "example": "Jhon"
                    },
                    "last_name": {
                        "type": "string",
                        "example": "Doe"
                    },
                    "last_update": {
                        "type": "string",
                        "example": "2013-05-26 14:47:57.62"
                    }
                }
            },
            "createactor": {
                "type": "object",
                "properties": {
                    "first_name": {
                        "type": "string",
                        "example": "Jhon"
                    },
                    "last_name": {
                        "type": "string",
                        "example": "Doe"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "jwt"
            }
        }
    },
    "paths": {
        "/actor": {
            "get": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "tags": [
                    "actor api"
                ],
                "description": "api to get all data of actor",
                "summary": "get all actor",
                "responses": {
                    "200": {
                        "description": "succes get all actor",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number",
                                            "example": 200
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/actor"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "tags": [
                    "actor api"
                ],
                "description": "add new actor",
                "summary": "add new actor",
                "requestBody": {
                    "required": true,
                    "description": "contain all data to create new actor",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/createactor"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success add new actor",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number",
                                            "example": 200
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/actor"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/actor/:id": {
            "get": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "tags": [
                    "actor api"
                ],
                "description": "get actor by id",
                "summary": "get actor",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        },
                        "description": "parameter is number that will use to query data in database"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success get actor",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number",
                                            "example": 200
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/actor"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "tags": [
                    "actor api"
                ],
                "description": "update actor by id",
                "summary": "update actor",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        },
                        "description": "parameter is number that will use to query data in database"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "description": "contain all data to create new actor",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/createactor"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success update actor",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number",
                                            "example": 200
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/actor"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "tags": [
                    "actor api"
                ],
                "description": "delete actor api",
                "summary": "delete actor",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        },
                        "description": "parameter is number that will use to query data in database"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success delete actor",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "number",
                                            "example": 200
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}